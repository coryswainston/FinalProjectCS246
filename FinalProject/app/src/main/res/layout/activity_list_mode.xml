<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs246.finalproject.ListMode">

    <GridLayout
        android:layout_width="389dp"
        android:layout_height="84dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:id="@+id/gridLayout" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="358dp"
        android:layout_height="466dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="88dp" />

    <ImageButton
        android:id="@+id/listButtonLM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/buttonUnpressed"
        android:tint="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginStart = "16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.015"
        app:layout_constraintRight_toLeftOf="@+id/calendarButtonCM"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginEnd="8dp"/>

    <ImageButton
        android:id="@+id/calendarButtonLM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@android:drawable/ic_menu_today"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"
        android:tint="@color/buttonUnpressed"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.015"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.216"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:onClick="openCalendar"/>

    <ImageButton
        android:id="@+id/journalButtonLM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        app:srcCompat="@android:drawable/ic_menu_edit"
        android:backgroundTint="@color/white"
        android:tint="@color/buttonUnpressed"
        android:onClick="openJournal"
        app:layout_constraintTop_toTopOf="@+id/gridLayout"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/calendarButtonLM"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/gridLayout"
        app:layout_constraintHorizontal_bias="0.635"
        app:layout_constraintVertical_bias="0.444" />

    <ImageButton
        android:id="@+id/filterButtonLM"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"
        android:tint="@color/buttonUnpressed"
        android:onClick="removeFilter"
        app:srcCompat="@android:drawable/ic_menu_more"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/gridLayout"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/gridLayout"
        android:layout_marginBottom="8dp"
        app:layout_constraintLeft_toRightOf="@+id/journalButtonLM"
        android:layout_marginLeft="8dp" />

</android.support.constraint.ConstraintLayout>
