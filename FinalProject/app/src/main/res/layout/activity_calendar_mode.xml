<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cs246.finalproject.CalendarMode">

    <GridLayout
        android:layout_width="387dp"
        android:layout_height="82dp"
        tools:layout_editor_absoluteX="433dp"
        tools:layout_editor_absoluteY="-165dp"
        android:background="@color/colorPrimary"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/journal_Button"
        android:layout_marginLeft="16dp"
        android:layout_marginStart = "16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.017"
        android:background="@drawable/round_button"/>

    <Button
        android:id="@+id/calendar_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calendar_Button"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginLeft="16dp"
        android:layout_marginStart = "16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="447dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintVertical_bias="0.125"
        android:layout_marginRight="8dp"
        android:layout_marginEnd = "8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:background="@drawable/round_button"/>

    <CalendarView
        android:id="@+id/simpleCalendarView"
        android:layout_width="369dp"
        android:layout_height="471dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_today"
        tools:layout_editor_absoluteX="240dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/buttonUnpressed"
        android:tint="@color/white"/>

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size"
        tools:layout_editor_absoluteX="298dp"
        tools:layout_editor_absoluteY="16dp"
        android:background="@drawable/round_button"
        android:backgroundTint="@color/white"
        android:tint="@color/buttonPressed"/>

</android.support.constraint.ConstraintLayout>
